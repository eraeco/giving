{
  "name": "giving",
  "version": "1.0.1",
  "repository": "https://github.com/eraeco/giving.git",
  "license": "MIT",
  "scripts": {
    "predeploy": "npm version patch -m 'Deploy version %s'",
    "deploy": "gh-pages -d dist",
    "preversion": "yarn test",
    "version": "yarn run build && git add -Af dist",
    "postversion": "git push && git push --tags",
    "build": "parcel build index.html --public-url /giving/",
    "dev": "parcel index.html --open",
    "start": "yarn run build && yarn run dev",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "parcel": "^2.0.0-beta.1"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.5.0"
  }
}
